{
  "name": "nx-cache-server",
  "version": "1.0.0",
  "description": "Self-hosted Nx cache server with Redis backend",
  "private": true,
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "dev:web": "bun --hot src/server.ts --open /web",
    "start": "NODE_ENV=production bun src/server.ts",
    "build": "bun run build.ts",
    "test": "bun test",
    "test:api": "bun run scripts/test-api.ts",
    "generate-token": "bun run scripts/generate-token.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f nx-cache-server"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.0",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@types/ioredis": "^5.0.0",
    "bun-plugin-tailwind": "^0.0.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elysia": "^1.3.5",
    "ioredis": "^5.6.1",
    "lucide-react": "^0.475.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
